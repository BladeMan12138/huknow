<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/display_backrrow"/>
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/whoda"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请选择交易方式"
            android:textSize="15sp"
            android:gravity="center|bottom"

            />

        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/faceToface"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFDAC8"
            android:text="面对面交易"
            android:textColor="#FF5809"
            android:textSize="19sp" />

        <Button
            android:id="@+id/online"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="#EFFFD7"
            android:text="线上交易"
            android:textColor="#73BF00"
            android:textSize="19sp" />
    </LinearLayout>



</LinearLayout>