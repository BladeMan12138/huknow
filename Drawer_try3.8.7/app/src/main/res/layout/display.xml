<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp">

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="310dp"
            >

            <android.support.v4.view.ViewPager

                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center"

                >

                <View
                    android:id="@+id/dot_0"
                    android:layout_width="7dip"
                    android:layout_height="7dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_focused"/>

                <View
                    android:id="@+id/dot_1"
                    android:layout_width="7dip"
                    android:layout_height="7dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal"/>

                <View
                    android:id="@+id/dot_2"
                    android:layout_width="7dip"
                    android:layout_height="7dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal"/>

                <!-- <View
                 android:id="@+id/dot_3"
                 android:layout_width="7dip"
                 android:layout_height="7dip"
                 android:layout_marginLeft="2dip"
                 android:layout_marginRight="2dip"
                 android:background="@drawable/dot_normal"/>
                 <View
                     android:id="@+id/dot_4"
                     android:layout_width="7dip"
                     android:layout_height="7dip"
                     android:layout_marginLeft="2dip"
                     android:layout_marginRight="2dip"
                     android:background="@drawable/dot_normal"/>-->
            </LinearLayout>
        </FrameLayout>
        <include layout="@layout/display_backrrow"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >




        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/display_price"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:textSize="25sp"
                android:text="20.0"
                android:gravity="center"
                android:textColor="@color/color_fragment1_price"
                />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/display_goodsname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#3C3C3C"
                android:gravity="center_vertical"
                android:text="哈哈哈哈"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/dispaly_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:textColor="#5B5B5B"
                android:text="哈哈哈"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:weightSum="1">
        <CheckBox
            android:id="@+id/cherish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:padding="3dp"
            style="@style/CustomCheckboxTheme"
            android:layout_gravity="bottom"
            android:layout_weight="0.06" />
        <ImageButton
            android:id="@+id/buyit"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/buyit"
            />

    </LinearLayout>

</LinearLayout>
