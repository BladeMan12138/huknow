<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_new__auction"
    tools:context="sd.rtyy.com.example.qiu.drawer_try.NEW.New_Auction2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:scrollbars="none"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <EditText
                android:background="@drawable/shape_gray"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:id="@+id/auction_goodsname"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="请输入竞拍物品名称"
                android:textCursorDrawable="@null"/>

            <EditText
                android:background="@drawable/shape_gray"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/auction_startprice"
                android:ems="10"
                android:hint="请输入起拍价格"
                android:textCursorDrawable="@null"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_name2"
                android:inputType="numberDecimal"/>

            <EditText
                android:background="@drawable/shape_gray"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/auction_moneyrange"
                android:ems="10"
                android:hint="涨价最小幅度"
                android:textCursorDrawable="@null"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_name2"
                android:inputType="numberDecimal"/>

            <EditText
                android:background="@drawable/shape_gray"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/auction_tab"
                android:ems="10"
                android:hint="请输入物品标签 如：收藏珍品等"
                android:textCursorDrawable="@null"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_price2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="106dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/edit_tag2"
                    android:layout_marginTop="10dp"
                    android:text="成交间隔"

                    android:lines="2"
                    android:textSize="20sp"/>
                <EditText
                android:background="@drawable/shape_gray"
                android:layout_height="30dp"
                android:layout_width="40dp"
                android:layout_marginTop="20dp"
                android:id="@+id/auction_Day"
                android:ems="10"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_tag2"
                />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="天"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_tag2"/>
                <EditText
                    android:background="@drawable/shape_gray"
                    android:layout_height="30dp"
                    android:layout_width="40dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/auction_Hour"
                    android:ems="10"
                    android:hint=""
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_tag2"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="小时"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_tag2"/>
                <EditText
                    android:background="@drawable/shape_gray"
                    android:layout_height="30dp"
                    android:layout_width="40dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/auction_Min"
                    android:ems="10"
                    android:hint=""
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_tag2"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="分钟"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_tag2"/>
            </LinearLayout>

            <EditText
                android:background="@drawable/shape_gray"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:id="@+id/auction_describe"

                android:hint="请在此添加详细说明"
                android:gravity="left|top"
                android:scrollbars="vertical"
                android:lines="5"
                android:textCursorDrawable="@null"
                android:maxLines="10"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_time2"
                android:numeric="decimal"
                android:inputType="textMultiLine"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(只能添加3张图片,长按图片可以删除已添加图片)"
                android:gravity="center" />
            <GridView
                android:id="@+id/gridView1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="#EFDFDF"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:numColumns="4"
                android:columnWidth="90dp"
                android:stretchMode="columnWidth"
                android:gravity="center" >
            </GridView>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
