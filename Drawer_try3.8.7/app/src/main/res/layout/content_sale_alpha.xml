<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:background="@drawable/background_green_rectangle"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/id_drawerLayout_alpha4"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <sd.rtyy.com.example.qiu.drawer_try.AlphaTitleScrollView.AlphaTitleScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/colorBackgroundDark"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollview4">


            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"

                android:orientation="vertical">

                <!-- 显示的head为ImageView -->


                <ImageView

                    android:layout_height="750px"
                    android:layout_width="match_parent"
                    android:id="@+id/head4"
                    android:src="@drawable/green"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/id_pic4"
                    android:layout_below="@id/head4"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"

                    android:background="@color/colorBackgroundLight"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/id_title4"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="标题"
                        android:textSize="50px"
                        android:gravity="left"/>

                    <LinearLayout
                        android:id="@+id/auc4"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/id_title4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/id_auc5"

                            android:layout_height="70dp"
                            android:layout_width="wrap_content"
                            android:text="折扣价格"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/id_auc6"
                            android:layout_marginLeft="10dp"
                            android:layout_height="70dp"
                            android:layout_width="wrap_content"
                            android:text="¥0.00"
                            android:textSize="40dp"
                            android:textColor="#fa0101"
                            />
                        <TextView
                            android:id="@+id/id_auc_7"
                            android:layout_height="70dp"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="原价"
                            android:textSize="10sp"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/id_auc8"
                            android:layout_marginLeft="10dp"
                            android:layout_height="70dp"
                            android:layout_width="wrap_content"
                            android:text="¥0.00"
                            android:textSize="10sp"
                            android:gravity="left"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/id_mark4"
                        android:layout_below="@id/auc4"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:layout_width="match_parent"
                        android:text="个性标签"
                        android:textSize="30px"

                        android:gravity="left"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/id_des4"
                    android:layout_below="@id/id_pic4"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBackgroundLight"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/id_describe4"
                        android:layout_marginTop="10dp"
                        android:layout_height="250dp"
                        android:layout_width="match_parent"

                        android:text="详细说明详细说明详细说明"
                        android:textSize="50px"
                        android:gravity="left"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/id_pro4"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_below="@id/id_des4"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorBackgroundLight"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/id_salers4"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/touxiang"
                        android:layout_marginLeft="20dp"
                        />
                    <LinearLayout
                        android:id="@+id/id_users_msg4"
                        android:layout_toRightOf="@id/id_salers4"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/id_users_name4"
                            android:layout_width="wrap_content"
                            android:text="用户名"
                            android:textSize="50px"
                            android:layout_height="60dp"
                            />
                        <TextView
                            android:id="@+id/id_users_desc4"
                            android:layout_below="@id/id_users_name4"
                            android:layout_width="wrap_content"
                            android:text="个人简介"
                            android:textSize="30px"
                            android:layout_height="40dp"
                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </sd.rtyy.com.example.qiu.drawer_try.AlphaTitleScrollView.AlphaTitleScrollView>

        <!-- title标题栏-->

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:id="@+id/title4"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/btn_back4"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/arrow"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="11dp"> </ImageButton>

            <ImageButton
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:onClick="OpenRightMenutoSelect"
                android:background="@drawable/more"
                android:layout_marginTop="11dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:gravity="right"> </ImageButton>

        </LinearLayout>

    </RelativeLayout>

    <fragment
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:id="@+id/id_right_menu_24"
        android:tag="RIGHT"
        android:layout_gravity="right"
        android:name="sd.rtyy.com.example.qiu.drawer_try.MenuRightFragment"/>

</android.support.v4.widget.DrawerLayout>
